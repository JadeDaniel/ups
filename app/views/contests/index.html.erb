<% if current_user %>
  Logged in as <%= current_user.email %>
  <%= link_to "Log Out", logout_path %>
<% else %>
  <%= link_to "Sign Up", signup_path %> or
  <%= link_to "Log In", login_path %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Contests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Leader</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contests.where(parent_id: nil).each do |contest| %>
      <tr>
        <%= render :partial => 'contests/inline', :locals => {:contest => contest} %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contest', new_contest_path %>

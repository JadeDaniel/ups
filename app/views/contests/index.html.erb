    <div class="col-2" id="ContestUp-col">
      <div class="row" id="ContestUp-topRow">
        <div class="col" id="ContestUpAction-col">
          <%= "completed" if contest.completed %>
          <%= form_for [contest, contest.votes.build] do |f| %>
            <%= f.submit "Up" %>
            <%= f.hidden_field :contest_id, value: contest.id %>
          <% end %>
        </div>
      </div>
      <div class="row" id="ContestUpBottomRow">
        <div class="col" id="ContestUpCount-col">
          <%= contest.votes.count %>
